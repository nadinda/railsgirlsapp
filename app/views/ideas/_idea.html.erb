<div class="col">
  <div  id="<%= dom_id idea %>" class="card h-100" style="width: 18rem;">
    <img src="<%= idea.picture_url if idea.picture? %>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"> <%= idea.name %></h5>
      <p class="card-text"><%= idea.description %></p>
      <%= link_to "<button class='btn btn-primary'>Show this idea</button>".html_safe, idea %>
    </div>
  </div>
</div>